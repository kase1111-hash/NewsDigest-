# NewsDigest Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Optional - for integrations)
# =============================================================================

# NewsAPI.org API key (for newsapi integration)
# Get yours at: https://newsapi.org/register
NEWSAPI_KEY=

# NewsDigest API key (for hosted API access)
NEWSDIGEST_API_KEY=

# =============================================================================
# Email Configuration (Optional - for digest delivery)
# =============================================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_TLS=true

# Default recipient for digest emails
DIGEST_EMAIL_TO=

# =============================================================================
# Twitter/X Integration (Optional)
# =============================================================================

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Config file path (default: ~/.newsdigest/config.yml)
NEWSDIGEST_CONFIG=

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (more verbose logging)
DEBUG=false

# API server settings (for `newsdigest serve`)
API_HOST=127.0.0.1
API_PORT=8080
API_WORKERS=4
