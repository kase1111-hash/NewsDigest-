# NewsDigest Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Optional - for integrations)
# =============================================================================

# NewsAPI.org API key (for newsapi integration)
# Get yours at: https://newsapi.org/register
NEWSAPI_KEY=

# NewsDigest API key (for hosted API access)
NEWSDIGEST_API_KEY=

# =============================================================================
# EXTRACTION SETTINGS
# =============================================================================

# Extraction mode: conservative, standard, aggressive
# NEWSDIGEST_MODE=standard

# Minimum semantic density for sentences (0.0-1.0)
# NEWSDIGEST_MIN_SENTENCE_DENSITY=0.3

# How to handle unnamed sources: keep, flag, remove
# NEWSDIGEST_UNNAMED_SOURCES=flag

# How to handle speculation: keep, flag, remove
# NEWSDIGEST_SPECULATION=remove

# Maximum hedge words per sentence before flagging
# NEWSDIGEST_MAX_HEDGES_PER_SENTENCE=2

# How to handle emotional language: keep, flag, remove
# NEWSDIGEST_EMOTIONAL_LANGUAGE=remove

# =============================================================================
# QUOTE HANDLING
# =============================================================================

# Keep quotes with named attribution
# NEWSDIGEST_QUOTES_KEEP_ATTRIBUTED=true

# Keep quotes without attribution
# NEWSDIGEST_QUOTES_KEEP_UNATTRIBUTED=false

# Flag circular citations
# NEWSDIGEST_QUOTES_FLAG_CIRCULAR=true

# =============================================================================
# DIGEST SETTINGS
# =============================================================================

# Digest time period
# NEWSDIGEST_DIGEST_PERIOD=24h

# Maximum items in digest
# NEWSDIGEST_DIGEST_MAX_ITEMS=100

# Enable clustering of related articles
# NEWSDIGEST_DIGEST_CLUSTERING=true

# Enable deduplication
# NEWSDIGEST_DIGEST_DEDUP=true

# Similarity threshold for deduplication (0.0-1.0)
# NEWSDIGEST_SIMILARITY_THRESHOLD=0.85

# Minimum novelty score to include (0.0-1.0)
# NEWSDIGEST_MIN_NOVELTY_SCORE=0.3

# =============================================================================
# OUTPUT SETTINGS
# =============================================================================

# Output format: markdown, json, text
# NEWSDIGEST_OUTPUT_FORMAT=markdown

# Show statistics in output
# NEWSDIGEST_OUTPUT_SHOW_STATS=true

# Include source links
# NEWSDIGEST_OUTPUT_INCLUDE_LINKS=true

# Show warnings about content
# NEWSDIGEST_OUTPUT_SHOW_WARNINGS=true

# =============================================================================
# NLP SETTINGS
# =============================================================================

# spaCy model to use
# NEWSDIGEST_SPACY_MODEL=en_core_web_sm

# =============================================================================
# HTTP SETTINGS
# =============================================================================

# Request timeout in seconds
# NEWSDIGEST_HTTP_TIMEOUT=30

# Number of retries for failed requests
# NEWSDIGEST_HTTP_RETRIES=3

# Rate limit (requests per second)
# NEWSDIGEST_REQUESTS_PER_SECOND=1.0

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Enable caching
# NEWSDIGEST_CACHE_ENABLED=true

# Cache TTL in seconds
# NEWSDIGEST_CACHE_TTL=3600

# Maximum cache size (number of items)
# NEWSDIGEST_CACHE_MAX_SIZE=1000

# =============================================================================
# ERROR REPORTING (Optional)
# =============================================================================

# Sentry DSN for error reporting
# SENTRY_DSN=https://your-key@sentry.io/project-id

# Environment name for error reporting
# NEWSDIGEST_ENV=development

# Application version (for error tracking)
# NEWSDIGEST_VERSION=1.0.0

# =============================================================================
# AWS SECRETS MANAGER (Optional)
# =============================================================================

# AWS region for Secrets Manager
# AWS_DEFAULT_REGION=us-east-1

# AWS credentials (if not using IAM roles)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Email Configuration (Optional - for digest delivery)
# =============================================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_TLS=true

# Default recipient for digest emails
DIGEST_EMAIL_TO=

# =============================================================================
# Twitter/X Integration (Optional)
# =============================================================================

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Config file path (default: ~/.newsdigest/config.yml)
NEWSDIGEST_CONFIG=

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (more verbose logging)
DEBUG=false

# API server settings (for `newsdigest serve`)
API_HOST=127.0.0.1
API_PORT=8080
API_WORKERS=4
