# NewsDigest Development Environment Variables
# Copy this file to .env in the project root for local development

# Environment identifier
NEWSDIGEST_ENV=development

# Extraction settings
NEWSDIGEST_MODE=standard
NEWSDIGEST_SPECULATION=flag
NEWSDIGEST_EMOTIONAL_LANGUAGE=flag

# NLP settings
NEWSDIGEST_SPACY_MODEL=en_core_web_sm

# HTTP settings
NEWSDIGEST_HTTP_TIMEOUT=15
NEWSDIGEST_HTTP_RETRIES=2
NEWSDIGEST_REQUESTS_PER_SECOND=2.0

# Cache settings
NEWSDIGEST_CACHE_ENABLED=true
NEWSDIGEST_CACHE_TTL=300

# Output settings
NEWSDIGEST_OUTPUT_FORMAT=markdown
NEWSDIGEST_OUTPUT_SHOW_STATS=true
NEWSDIGEST_OUTPUT_SHOW_WARNINGS=true

# Logging
LOG_LEVEL=DEBUG

# Error reporting (disabled in development)
SENTRY_DSN=

# Feature flags
NEWSDIGEST_DEBUG_MODE=true
NEWSDIGEST_EXPERIMENTAL_ANALYZERS=true
