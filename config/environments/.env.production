# NewsDigest Production Environment Variables
# Use this configuration for production deployments
# IMPORTANT: Never commit actual secrets - use a secrets manager

# Environment identifier
NEWSDIGEST_ENV=production

# Extraction settings
NEWSDIGEST_MODE=standard
NEWSDIGEST_SPECULATION=remove
NEWSDIGEST_EMOTIONAL_LANGUAGE=remove

# NLP settings
NEWSDIGEST_SPACY_MODEL=en_core_web_sm

# HTTP settings
NEWSDIGEST_HTTP_TIMEOUT=30
NEWSDIGEST_HTTP_RETRIES=3
NEWSDIGEST_REQUESTS_PER_SECOND=1.0

# Cache settings
NEWSDIGEST_CACHE_ENABLED=true
NEWSDIGEST_CACHE_TTL=3600

# Output settings
NEWSDIGEST_OUTPUT_FORMAT=markdown
NEWSDIGEST_OUTPUT_SHOW_STATS=true
NEWSDIGEST_OUTPUT_SHOW_WARNINGS=false

# Logging
LOG_LEVEL=WARNING

# Error reporting (enabled for production)
# IMPORTANT: Set actual DSN via secrets manager, not here
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# Feature flags
NEWSDIGEST_DEBUG_MODE=false
NEWSDIGEST_EXPERIMENTAL_ANALYZERS=false
