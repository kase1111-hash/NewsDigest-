# NewsDigest Staging Environment Variables
# Use this configuration for staging/QA environments

# Environment identifier
NEWSDIGEST_ENV=staging

# Extraction settings
NEWSDIGEST_MODE=standard
NEWSDIGEST_SPECULATION=remove
NEWSDIGEST_EMOTIONAL_LANGUAGE=remove

# NLP settings
NEWSDIGEST_SPACY_MODEL=en_core_web_sm

# HTTP settings
NEWSDIGEST_HTTP_TIMEOUT=30
NEWSDIGEST_HTTP_RETRIES=3
NEWSDIGEST_REQUESTS_PER_SECOND=1.0

# Cache settings
NEWSDIGEST_CACHE_ENABLED=true
NEWSDIGEST_CACHE_TTL=1800

# Output settings
NEWSDIGEST_OUTPUT_FORMAT=markdown
NEWSDIGEST_OUTPUT_SHOW_STATS=true
NEWSDIGEST_OUTPUT_SHOW_WARNINGS=true

# Logging
LOG_LEVEL=INFO

# Error reporting (enabled for staging)
SENTRY_DSN=your-staging-sentry-dsn-here
SENTRY_ENVIRONMENT=staging
SENTRY_SAMPLE_RATE=1.0

# Feature flags
NEWSDIGEST_DEBUG_MODE=false
NEWSDIGEST_EXPERIMENTAL_ANALYZERS=true
